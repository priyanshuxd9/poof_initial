
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // User Avatars: A user can only write to their own avatar path.
    match /user-avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Group Icons: Only the group owner can write to the group's icon path.
    match /group-avatars/{ownerId}/{groupId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == ownerId;
    }

    // Group Media: A user can write to a path containing their own UID.
    // Any group member can read any file within the group's folder.
    match /group-media/{groupId}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && exists(/databases/$(database)/documents/groups/$(groupId)) && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberUserIds;
    }
  }
}
