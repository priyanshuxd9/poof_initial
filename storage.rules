
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows anyone to read images from the `images` folder.
    // It's useful for public assets.
    match /images/{allPaths=**} {
      allow read;
    }

    // This rule allows users to manage their own profile pictures.
    // Anyone can read them, but only the owner can write.
    match /user-avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // This rule allows group owners to manage their group's avatar.
    match /group-avatars/{ownerId}/{groupId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == ownerId;
    }

    // --- TEMPORARY DEBUGGING RULE ---
    // This rule is insecure and for diagnostic purposes only.
    // It allows any authenticated user to upload to the group media folder,
    // bypassing the complex group membership checks that may be failing.
    match /group-media/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
      
      // For now, allow any authenticated user to read as well.
      allow read: if request.auth != null; 
    }
  }
}
